@page "/acessar"


<div class="py-4">
    <div class=" row form-group ">
        <div class="col-6 offset-3 ">
            <div class="card border">
                <div class="card-body px-lg-5 pt-4">
                    <h3 class="col-12 text-success text-center py-2">
                        <strong>Acessar</strong>
                    </h3>

                    <EditForm Model="UsuarioAutenticacao" OnValidSubmit="AcessoUsuario">
                        <DataAnnotationsValidator />

                        @if (ErrosAutenticacao)
                        {
                            <p class="text-center text-danger">@Erros</p>
                        }

                        <div class="form-row py-2">
                            <InputText @bind-Value="UsuarioAutenticacao.NomeUsuario" id="email" placeholder="Nome usuario..." class="form-control mb-2" />
                            <ValidationMessage For="(()=>UsuarioAutenticacao.NomeUsuario)"></ValidationMessage>
                        </div>

                        <div class="form-row py-2">
                            <InputText @bind-Value="UsuarioAutenticacao.Password" type="password" placeholder="Password..." id="password" class="form-control mb-2" />
                            <ValidationMessage For="(()=>UsuarioAutenticacao.Password)"></ValidationMessage>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                @if (Processando)
                                {
                                    <button type="submit" class="btn btn-success disabled" style="vertical-align:middle;line-height:30px;"><i class="fas fa-sign-in-alt"></i> Espere...</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success" style="vertical-align:middle;line-height:30px;"><i class="fas fa-sign-in-alt"></i> Acessar</button>
                                }
                            </div>
                            <div class="col-6">
                                <a href="/registrar-se"
                                   class="btn btn-primary text-white" style="vertical-align:middle;line-height:30px;"><i class="fas fa-user-plus"></i> Registrar novo usuário</a>
                            </div>
                        </div>
                    </EditForm>

                </div>
            </div>
        </div>
    </div>
</div>
